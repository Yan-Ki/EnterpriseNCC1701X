<Window x:Class="EnterpriseNCC1701X.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnterpriseNCC1701X"
        mc:Ignorable="d"
        Title="WindowLogin" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock 
            Text="Имя базы данных" 
           />
            <TextBox x:Name="NameDB"
              />
            <TextBlock 
            Text="Логин" 
            
          />
            <TextBox x:Name="Login"
             />
            <TextBlock 
            Text="Пароль" 
           />
            <TextBox x:Name="Password"
            />
            <Button  Content="Подключение к базе с логином и паролем" Click="Button_Click_1" 
             />
            <TextBox x:Name="Pas"
            />
            <Button  Content="Подключение" Click="Button_Click" 
             />



        </StackPanel>
      
        

    </Grid>
</Window>
